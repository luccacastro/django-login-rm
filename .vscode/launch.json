{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": ["runserver", "--noreload"],
            "django": true,
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/src/venv/bin/python",
            "env": {
                "DJANGO_SETTINGS_MODULE": "ruth_portal.settings"
            }
        },
        {
            "name": "Django Management Command",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": ["importschools", "/home/jacob/ruth_portal/schools.csv"],
            "django": true
        }
    ]
}